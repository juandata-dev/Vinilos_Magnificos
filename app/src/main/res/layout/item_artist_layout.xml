<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Este bloque hace el binding de datos del album de este viewHolder con el adapter -->
    <data>
        <variable
            name="artist"
            type="co.edu.uniandes.vinilotunes.data.model.Performer" />
        <variable
            name="position"
            type="Integer" />
        <variable
            name="artistAdapter"
            type="co.edu.uniandes.vinilotunes.ui.artist.ArtistAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{ () -> artistAdapter.onClickArtist(position) }">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#B3767676" />
            <ImageView
                android:id="@+id/artist_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:imageUrl="@{artist.image}"
                android:src="@drawable/album_placeholder"
                android:contentDescription="@string/add" />
            <TextView
                android:id="@+id/tvNameArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@{artist.name}"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/artist_image"
                tools:text="Artist's name" />


        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>